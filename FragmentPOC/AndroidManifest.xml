<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fragmentpoc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.fragmentpoc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fragmentpoc.HomeFragment"
            android:label="@string/title_activity_home_fragment" >
        </activity>
        <activity
            android:name="com.example.fragmentpoc.HomeRightFragment"
            android:label="@string/title_activity_home_right_fragment" >
        </activity>
        <activity
            android:name="com.example.fragmentpoc.TopicsFragment"
            android:label="@string/title_activity_topics" >
        </activity>
    </application>

</manifest>
